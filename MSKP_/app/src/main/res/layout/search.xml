<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:fadingEdge="horizontal"

    >

    <ScrollView
        android:id="@+id/svLayout"
        android:fadingEdge="none"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.70">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:padding="@dimen/pad_15dp"
            android:id="@+id/ground">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/webViewHolder"
                android:fadingEdge="none"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                android:padding="10dp">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Cari Training"
                    android:layout_marginBottom="@dimen/pad_20dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:textAlignment="center"
                    android:id="@+id/search"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:layout_marginBottom="10dip"
                    >

                    <EditText
                        android:id="@+id/Edtsearch"
                        android:layout_width="fill_parent"
                        android:layout_height="50dip"
                        android:hint="ketik judul,kategori atau penyedia"
                        android:textSize="19sp"
                        android:inputType="textMultiLine"
                        android:background="@drawable/bg_comment"
                        style="@style/edittext_msg" />
                </LinearLayout>







            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>