<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="apps.info.mskp.activity.BonusFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:weightSum="1">

        <!-- Login Button -->

        <Button
            android:id="@+id/btnBonusHari"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/bg_button"

            android:text="Bonus Hari Ini"
            android:textColor="@color/windowBackground" />
        <Button
            android:id="@+id/btnBonusTotal"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/bg_button"

            android:text="Total Bonus"
            android:textColor="@color/windowBackground" />

        <Button
            android:id="@+id/btnBonusHis"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/bg_button"

            android:text="Bonus History"
            android:textColor="@color/windowBackground" />


    </LinearLayout>

</FrameLayout>
