<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/foreground"
    android:gravity="top"

    android:orientation="vertical"
    android:fadingEdge="horizontal"

    >
    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>
<LinearLayout  android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">
    <TextView
        android:id="@+id/labelBonusHari"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:text="Data Aktivasi Tercatat"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutatas"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="Nama member :"
                android:layout_alignParentLeft="true"
                android:id="@+id/textViewnama"
                android:layout_gravity="right"/>

            <TextView
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="ID Member :"
                android:layout_alignParentLeft="true"
                android:id="@+id/textViewidmember"
                android:layout_gravity="right"/>
            <TextView
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="Nama Bank :"
                android:layout_alignParentLeft="true"
                android:id="@+id/textViewBank"
                android:layout_gravity="right"/>
            <TextView
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="No Rekening :"
                android:layout_alignParentLeft="true"
                android:id="@+id/textViewnorek"
                android:layout_gravity="right"/>

            <TextView
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="Nama Rekening :"
                android:layout_alignParentLeft="true"
                android:id="@+id/textViewnamrek"
                android:layout_gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutataskanan"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/linearLayoutatas"
            android:layout_toEndOf="@+id/linearLayoutatas">

            <TextView
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="Rp.0;"
                android:layout_alignParentLeft="true"
                android:id="@+id/hisbonus_namamember"
                android:layout_gravity="left"/>

            <TextView
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="Rp.0;"
                android:layout_alignParentLeft="true"
                android:id="@+id/hisbonus_idmember"
                android:layout_gravity="left"/>

            <TextView
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="Rp.0;"
                android:layout_alignParentLeft="true"
                android:id="@+id/hisbonus_namabank"
                android:layout_gravity="left"/>

            <TextView
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="Rp.0;"
                android:layout_alignParentLeft="true"
                android:id="@+id/hisbonus_norek"
                android:layout_gravity="left"/>
            <TextView
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="Rp.0;"
                android:layout_alignParentLeft="true"
                android:id="@+id/hisbonus_namarek"
                android:layout_gravity="left"/>

        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/hisbonus_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/foreground"
        android:dividerHeight="10dip"
        android:drawSelectorOnTop="true">
    </ListView>


</LinearLayout>
</LinearLayout>